<%= render 'partials/sticky_filter_bar' %>

<br>

<div class="container">

  <h4><%= @kite_spot.name %></h4>
  <br>
  <div class="row">
    <div class="col-2">
      <h5>Best Months</h5>
    </div>

    <%= render 'partials/kiteable_month_selector', locals={kiteable_month_list: @kite_spot.kiteable_month_list} %>

  </div>

  <br><br>

  <%= render 'partials/leaflet_map', locals={loc_map: @kite_spot.location_map} %>

  <div class="row">
    <div class="col-12">
      <%= @kite_spot.description %>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-4">
      <h4>Amenities</h4>
    </div>

    <% @kite_spot.amenities.each do |amenity| %>
      <div class="col-1">
        <%= amenity %>
      </div>
    <% end %>

  </div>

  <hr>
  <%= link_to 'Edit', edit_kite_spot_path(@kite_spot) %> |
  <%= link_to 'Back', kite_spots_path %>

</div>
