<div class="container">
  <div class="row">
    <%= form_with(model: kite_spot, local: true) do |form| %>
      <% if kite_spot.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(kite_spot.errors.count, 'error') %> prohibited this kite_spot from being saved:</h2>

          <ul>
            <% kite_spot.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :photos %>
        <%= form.file_field :photos, multiple: true %>
      </div>

      <div class="field">
        <%= form.label :latitude %>
        <%= form.number_field :latitude %>
      </div>

      <div class="field">
        <%= form.label :longitude %>
        <%= form.number_field :longitude %>
      </div>

      <div class="field">
        <%= form.label :country %>
        <%= form.collection_select(:country_id, Country.all, :id, :name) %>
      </div>

      <div class="field">
        <%= form.label :kiteable_month_list %>
        <%= form.select :kiteable_month_list, KiteSpot.all_months, {}, {multiple: true} %>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
