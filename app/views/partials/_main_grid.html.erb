<!-- locals: {resource} -->
<!-- TODO - resize_to_limit set to actual size -->

<h2><%= pluralize(resource.length, resource.name) %></h2>
<h5>Full-width (within .container-fluid)</h5>

<div class="row">

  <% resource.each do |el| %>
    <div class="col-6 col-md-4 col-lg-3 mb-2">
      <h5><%= el.name %></h5>
      <% unless el.cover_photo.attachment.nil? %>
        <%= link_to image_tag(el.cover_photo.variant(resize_to_limit: [250, nil])), el %>
      <% else %>
        <img src="//placehold.it/640x480" class="img-fluid">
      <% end %>

    </div>
  <% end %>

</div>

<hr>
