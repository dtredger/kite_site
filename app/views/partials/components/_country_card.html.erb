<div class="col col-xs-6 col-lg-4 col-xl-3 px-0">
  <div class="d-flex align-items-center dark-overlay hover-scale-bg-image mh-400">
    <img src="<%= url_for(model.cover_photo) %>" alt="<%= model.name %>" class="bg-image" />
    <div class="p-3 p-sm-5 text-white z-index-20">
      <h4 class="h2"><%= model.name %></h4>
      <p class="mb-4 text-sm"><%= model.card_subtitle %></p>
      <%= link_to model, class: 'text-reset pl-0 stretched-link text-decoration-none btn
      btn-link' do %>
        SEE MORE
        <i class="fa fa-chevron-right ml-2"></i>
      <% end %>
    </div>
  </div>
</div>
