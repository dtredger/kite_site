<!--<nav class="navbar navbar-expand-md navbar-dark sticky-top">-->
<nav class="shadow navbar navbar-expand-lg navbar-light bg-white fixed-top">
  <!-- shadow fixed-top -->
  <div class="container-fluid">
    <div class="d-flex align-items-center">
      <%= link_to root_path do %>
        <%= image_tag 'favicons/android-chrome-192x192', style: 'max-height:35px;' %>
        <%= t('site_name') %>
      <% end %>
    </div>

    <div id="navbarCollapse" class="collapse navbar-collapse">
      <% if !filterable_controller(controller_path) %>
        <form id="searchcollapsed" class="form-inline mt-4 mb-2 d-sm-none">
          <div class="input-label-absolute input-label-absolute-left input-reset w-100 ">
            <label for="searchcollapsed_search" class="label-absolute">
              <i class="fa fa-search"></i>
              <span class="sr-only">What are you looking for?</span>
            </label>
          </div>
          <input id="searchcollapsed_search" type="text" placeholder="Search" aria-label="Search" class="border-0 shadow-0 bg-gray-200 form-control-sm form-control">
          <button type="reset" class="btn-reset btn btn-deoco btn-sm">
            <i class="fas fa-times"></i>
          </button>
        </form>
      <% end %>

      <ul class="ml-auto navbar-nav">
        <li class="nav-item"><%= link_to 'Kite Spots', kite_spots_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Countries', countries_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Global Map', global_map_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Search', search_advanced_path, class: 'nav-link' %></li>

        <% if current_user %>
          <li class="ml-lg-3 show nav-item dropdown">
            <a style="padding:0" href="#" class="nav-link dropdown-toggle" aria-haspopup="true" aria-expanded="false"
               role="button" data-toggle="dropdown">
              <%= image_tag current_user.profile_picture, class: 'avatar avatar-sm avatar-border-white mr-2' %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to 'Profile', profile_path, class: 'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-item nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-item btn btn-primary button-sm' %>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- TODO - verify this requires bootstrap.js -->
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>

  </div>
</nav>

