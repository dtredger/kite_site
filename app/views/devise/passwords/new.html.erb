<div class="px-3 container-fluid">
  <div class="min-vh-100 row">
    <div class="d-flex align-items-center col-md-8 col-lg-6 col-xl-5">
      <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
        <div class="mb-5">
          <!--
          <%= image_tag 'favicons/android-chrome-192x192.png', alt: '...', style: 'max-width:4rem', class: 'img-fluid
          mb-3' %> -->

          <h2>Forgot your password?</h2>
        </div>

        <div class="row">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render 'devise/shared/error_messages', resource: resource %>

            <div class="field">
              <%= f.label :email, class: 'form-label' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control' %>
            </div>
            <br>

            <div class="actions">
              <%= f.submit 'Send me reset password instructions', class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>

        <br>
        <hr>
        <br>

        <%= render 'devise/shared/links' %>

        <a class="close-absolute mr-md-5 mr-xl-6 pt-1" href="/">
          <svg class="svg-icon w-3rem h-3rem">
            <use xlink:href="<%= image_url('svg/orion-svg-sprite.svg#close-1') %>"></use>
          </svg>
        </a>

      </div>
    </div>
    <div class="d-none d-md-block col-md-4 col-lg-6 col-xl-7">
      <div style="background-image:url(<%= image_url(background_img_name) %>)" class="bg-cover h-100 mr-n3"></div>
    </div>
  </div>
</div>
