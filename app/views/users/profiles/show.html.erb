<!--favourites page-->
<section class="py-5">
  <div class="container">
    <div class="row">

      <div class="mr-lg-auto col-lg-3">
        <div class="border-0 shadow mb-6 mb-lg-0 card">
          <div class="bg-gray-100 py-4 border-0 text-center card-header">
            <a href="#" class="d-inline-block">
              <%= image_tag @user.profile_picture, alt: '', class: 'd-block avatar avatar-xxl p-2 mb-2' %>
            </a>
            <h5><%= @user.name %></h5>
            <p class="text-muted text-sm mb-0"><%= @user.email %></p>
          </div>
          <div class="p-4 card-body">

            <!--<div class="align-items-center mb-3 media">-->
              <!--<div class="icon-rounded icon-rounded-sm bg-primary-light mr-2"><svg class="svg-icon text-primary svg-icon-md">-->
                <!--<use xlink:href="<%= image_url('svg/orion-svg-sprite.svg#diploma-1') %>"> </use>-->
              <!--</svg></div>-->
              <!--<div class="media-body">-->
                <!--<p class="mb-0">2877 reviews</p>-->
              <!--</div>-->
            <!--</div>-->

            <div class="align-items-center mb-3 media">
              <div class="icon-rounded icon-rounded-sm bg-primary-light mr-2">
                <svg class="svg-icon text-primary svg-icon-md">
                  <use xlink:href="<%= image_url('svg/orion-svg-sprite.svg#heart-1') %>"> </use>
                </svg>
              </div>
              <div class="media-body">
                <p class="mb-0"><%= @user.favorites.count %> Favourites</p>
              </div>
            </div>
            <!--<hr>-->
            <!--<h6>Jack provided</h6>-->
            <!--<ul class="text-muted card-text">-->
              <!--<li>Government ID</li>-->
              <!--<li>Email address</li>-->
              <!--<li>Phone number</li>-->
            <!--</ul>-->
          </div>
        </div>
      </div>

      <div class="pl-lg-5 col-lg-9">
        <h1 class="hero-heading mb-0"><%= @user.name %></h1>
        <div class="text-block">
          <p><span class="badge badge-secondary-light">Joined in <%= @user.created_at.strftime('%Y') %></span></p>
          <div>
            <p class="text-muted"><%= @user.profile_text %></p>
          </div>
        </div>
        <div class="text-block">
          <h4 class="mb-5">Your Favourite Kite Spots</h4>
          <div class="row">
            <% @user.favorite_kite_spots.each do |kite_fave| %>
              <div class="mb-5 hover-animate col-sm-6 col-lg-4">
                <%= render 'partials/components/kite_spot_card', locals={model: kite_fave} %>
              </div>
            <% end %>

            <hr>
          </div>
          <h4 class="mb-5">Favourite Countries</h4>
          <div class="row">
            <% @user.favorite_countries.each do |country_fave| %>
              <div class="mb-5 hover-animate col-sm-6 col-lg-4">
                <%= render 'partials/components/country_card', locals={model: country_fave} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
